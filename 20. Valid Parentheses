class Solution {
    public boolean isValid(String s) {
        Stack<Character> st = new Stack<>();
        boolean valid = true;
        for(int i = 0 ; i < s.length() ; i++){
            char ch = s.charAt(i);
            if(ch == '(' || ch == '{' || ch == '[') st.push(ch);
            else {
                if(st.isEmpty()){
                    valid = false;
                    break;
                }else{
                    char ch2 = st.peek();
if((ch == ')' && ch2 != '(') || (ch == '}' && ch2 != '{') || (ch == ']' && ch2 != '[')){
                    valid = false;
                    break;
}else st.pop();
                }
            }
        }

        if(!st.isEmpty()) valid = false;
        return valid;
    }
}
