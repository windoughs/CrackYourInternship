class Solution {
    public void sortColors(int[] nums) {
        int n = nums.length;
        int i = 0 , j = n - 1;
        int k = 0;
        while(k < n){
            if(nums[k] == 0){
                swap(nums,k,i);
                i++;
            }
            k++;
        }
        k = i;
        while(j >= 0 && nums[j] == 2){
            j--;
        }
        while(k < j){
            if(nums[k] == 2){
                while(j >= 0 && nums[j] == 2){
                    j--;
                }
                if(k < j) swap(nums,k,j);
                j--;
            }
            k++;
        }
    }
    public void swap(int[] nums , int i , int j){
        int temp = nums[i];
        nums[i] = nums[j];
        nums[j] = temp;
    }
}
