class Solution {
    public List<String> generateParenthesis(int n) {
        ArrayList<String> ans = new ArrayList<>();
        getAnswer(n,0,0,"",ans);
        return ans;
    }
   public void  getAnswer(int n ,int open,int close,String str ,ArrayList<String> ans){
        if(open == n && close == n){
            ans.add(str);
            return;
        }
        if(open > n || close > open){
            return;
        }
        getAnswer(n, open + 1, close,str + "(",ans);
        getAnswer(n, open, close + 1,str + ")",ans);
    }
}
