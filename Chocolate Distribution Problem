class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        // your code here
        Collections.sort(a);
        long res = Integer.MAX_VALUE;
        int i = 0 , j = m - 1;
        while(j < n){
            res = Math.min(res , a.get(j) - a.get(i));
            i++;
            j++;
        }
        return res;
    }
}
