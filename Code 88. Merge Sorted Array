Question -> https://leetcode.com/problems/merge-sorted-array/

Code ->
class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
        int i = 0 , j = 0;
        int[] res = new int[m+n];
        int ind = 0;
        while(i < m && j < n){
           if(nums1[i] <= nums2[j]){
                res[ind] = nums1[i];
                i++;
           }else{
                res[ind] = nums2[j];
                j++;
           }
           ind++;
        }
        while(i < m){
            res[ind] = nums1[i];
            i++;
            ind++;
        }
        while(j < n){
            res[ind] = nums2[j];
            j++;
            ind++;
        }
        for(int k = 0 ; k < m+n ; k++){
            nums1[k] = res[k];
        }
    }
}
