Question -> https://leetcode.com/problems/maximum-points-you-can-obtain-from-cards/

Code->

class Solution {
    public int maxScore(int[] cards, int k) {
        int i = 0 , j = cards.length-1;
        int lSum = 0 , rSum = 0;
        while(i < k){
            lSum += cards[i];
            i++;
        }
        i--;
        int maxSum = lSum;
        while(i >= 0){
            lSum -= cards[i];
            rSum += cards[j];
            maxSum = Math.max(maxSum,lSum + rSum);
            i--;
            j--;
        }
        return maxSum;
    }
}
